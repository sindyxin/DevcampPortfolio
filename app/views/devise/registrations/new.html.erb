<div class="card" id="sign">
  <h2><%= fa_icon "user-circle" %> Sign up</h2>
  <div class="card-block">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= f.label :name, class: "col-md-3 col-form-label" %>
        <div class="col-md-7">
          <%= f.text_field :name, class: "form-control" %>

        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: "col-md-3 col-form-label" %>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-md-3 col-form-label" %>
        <div class="col-md-7">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          <small id="emailHelp" class="form-text text-white">
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </small>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-md-3 col-form-label" %>
        <div class="col-md-7">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-8"></div>
        <div class="col-md-2">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          <div class="auth-link login-style">
            <%= render "devise/shared/links" %> 
          </div>
        </div>

      </div>
    <% end %>

  </div>
</div>