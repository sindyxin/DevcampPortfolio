<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <meta name="keywords" content="<%= @seo_keywords %>">
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicons/girl.png' %>
    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <!-- Blog Nav -->
    <%= render "shared/blog_nav" %>


      <!-- Blog Header -->
    <%= render "shared/blog_header" %>
    <div class="blog-body">
      <!-- Blog Container and row element -->
      <div class="container" id="blog-container">
        <div class="row">
          <%= yield %>
          <!-- Blog Sidebar -->
          <%= render "shared/blog_sidebar" %>
        </div>
      </div>
      <!-- Blog Footer -->
      <%= render "shared/blog_footer" %>
      <%= alert %>
      <%= source_helper("blog") %>
    </div>
  </body>
</html>
