
<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <h3><%= pluralize(blog.errors.count, "errors") %> prohibited this blog from being saved:</h3>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label "Title"%>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", rows: 15 %>
  </div>
  <div class="form-group">
    <%= f.label "Topic"%>
    <%= f.collection_select(:topic_id, Topic.all, :id, :title,
                              {
                                selected: blog.topic_id,
                                include_blank: true

                              },
                              class: "form-control"
                              )
    %>

  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>







