<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1 avatar">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-10 align-self-center">
          <%= comment.content %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 avatar">
          <p id="comment-info">Comment posted by <b><%= comment.user.name.capitalize %></b> <%= distance_of_time_in_words(comment.created_at, Time.now) %></p>
        </div>
      </div>
    </div>
  </div>
</div>